<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.MenuFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_kembali"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"

        android:background="@drawable/ic_back"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/bt_profil"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"
        android:textColor="@color/HitamS"
        app:layout_constraintBottom_toBottomOf="@+id/bt_kembali"
        app:layout_constraintStart_toEndOf="@+id/bt_kembali"
        app:layout_constraintTop_toTopOf="@+id/bt_kembali" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_profil"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_kategori"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="15dp"
        android:text="Profil"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/HitamS"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_kembali" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_keluar"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_kategori"
        android:drawableStart="@drawable/ic_keluar"
        android:drawablePadding="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="15dp"
        android:text="Keluar"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/HitamS"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_profil"
        app:layout_constraintStart_toStartOf="@+id/bt_profil"
        app:layout_constraintTop_toBottomOf="@+id/bt_profil" />
</androidx.constraintlayout.widget.ConstraintLayout>