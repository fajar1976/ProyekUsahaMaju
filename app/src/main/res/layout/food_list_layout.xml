<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foodListRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/row_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/redlogo"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/list_makanan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@tools:sample/avatars"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:text="TextView"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/list_makanan"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kategori_textView"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/title_textView"
                app:layout_constraintStart_toStartOf="@+id/title_textView"
                app:layout_constraintTop_toBottomOf="@+id/title_textView" />

            <ImageView
                android:id="@+id/rate_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/star_textView"
                app:layout_constraintStart_toStartOf="@+id/star_textView"
                app:layout_constraintTop_toBottomOf="@+id/kategori_textView"
                app:srcCompat="@drawable/ic_rate" />

            <TextView
                android:id="@+id/star_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/bayangan"
                app:layout_constraintStart_toStartOf="@+id/kategori_textView"
                app:layout_constraintTop_toBottomOf="@+id/rate_imageView" />

            <ImageView
                android:id="@+id/lok_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/lok_textView"
                app:layout_constraintStart_toStartOf="@+id/lok_textView"
                app:layout_constraintTop_toTopOf="@+id/rate_imageView"
                app:srcCompat="@drawable/locationicon"
                tools:srcCompat="@drawable/ic_lokasi" />

            <TextView
                android:id="@+id/lok_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toEndOf="@+id/star_textView"
                app:layout_constraintTop_toBottomOf="@+id/lok_imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>