<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.HomeFragment">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_notif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/ic_notifikasi" />

        <androidx.appcompat.widget.AppCompatEditText

            android:id="@+id/cariEt"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_search"
            android:drawableEnd="@drawable/ic_search"
            android:fontFamily="@font/poppins_regular"
            android:hint="Pencariannya disini ya..."
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textColor="@color/Coklat"
            android:textColorHint="@color/Coklat"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="15dp"
            android:paddingTop="5dp"
            android:background="@drawable/ic_chat" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="15dp"
        android:id="@+id/bt_promo"
        android:layout_width="369dp"
        android:layout_height="115dp"
        android:background="@drawable/img_promo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_kmakan"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:text="Makanan"
        android:textColor="@color/HitamS"
        android:textSize="12sp"
        android:background="@drawable/bg_kategori"
        android:drawableTop="@drawable/icon_makan"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@+id/bt_promo"
        app:layout_constraintTop_toBottomOf="@+id/bt_promo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_kminum"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/bg_kategori"
        android:drawableTop="@drawable/icon_minum"
        android:fontFamily="@font/poppins_medium"
        android:padding="5dp"
        android:text="Minuman"
        android:textColor="@color/HitamS"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/bt_kmakan"
        app:layout_constraintTop_toTopOf="@+id/bt_kmakan" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button12"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/bg_kategori"
        android:drawableTop="@drawable/icon_jajanan"
        android:fontFamily="@font/poppins_medium"
        android:padding="5dp"
        android:text="Jajanan"
        android:textColor="@color/HitamS"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/button13"

        app:layout_constraintTop_toTopOf="@+id/bt_kminum" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button13"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:background="@drawable/bg_kategori"
        android:drawableTop="@drawable/icon_kelontong"
        android:fontFamily="@font/poppins_medium"
        android:text="Kelontong"
        android:textColor="@color/HitamS"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_promo"
        app:layout_constraintTop_toTopOf="@+id/button12" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="15dp"
        android:id="@+id/bt_tracker"
        android:layout_width="369dp"
        android:layout_height="115dp"
        android:background="@drawable/img_tracker"
        app:layout_constraintEnd_toEndOf="@+id/button13"
        app:layout_constraintStart_toStartOf="@+id/bt_kmakan"
        app:layout_constraintTop_toBottomOf="@+id/bt_kmakan" />

</androidx.constraintlayout.widget.ConstraintLayout>